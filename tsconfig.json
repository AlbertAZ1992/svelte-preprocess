{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "declaration": true,
    "types": ["jest", "node"],
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "dist"]
}
